    <script>
        var uri = 'api/familias';
        
        $(document).ready(function () {
            // Send an AJAX request
            $.getJSON(uri)
                .done(function (data) {
                    // On success, 'data' contains a list of products.
                    $.each(data, function (key, item) {
                        // Add a list item for the product.
                        $('#categories').append('<a href="/CategoryPage/Category/' + item.Familia + '" class="list-group-item">' + item.Descricao + '</a>');
                    });
                });
        });

        $(document).ready(function () {
            $.getJSON('api/artigos')
                .done(function (data) {
